{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@jspaste/frontend",
	"private": true,
	"license": "EUPL-1.2",
	"type": "module",
	"scripts": {
		"analyse:bundle": "bun run analyze:bundle",
		"analyze:bundle": "rm -rf ./dist/ && bun vite build && mv ./dist/client/bundle.html ./dist/client.bundle.html && mv ./dist/server/bundle.html ./dist/server.bundle.html",
		"build": "bun run build:server",
		"build:server": "rm -rf ./dist/ && bun vite build && bun run script:server && bun run script:compress",
		"build:standalone": "rm -rf ./dist/ && bun vite build && bun run script:standalone && bun run script:compress",
		"build:standalone:darwin-arm64": "bun run build:standalone -- --target=bun-darwin-arm64",
		"build:standalone:linux-glibc-amd64": "bun run build:standalone -- --target=bun-linux-x64-modern",
		"build:standalone:linux-glibc-arm64": "bun run build:standalone -- --target=bun-linux-arm64",
		"build:standalone:linux-musl-amd64": "bun run build:standalone -- --target=bun-linux-x64-modern-musl",
		"build:standalone:linux-musl-arm64": "bun run build:standalone -- --target=bun-linux-arm64-musl",
		"build:standalone:windows-amd64": "bun run build:standalone -- --target=bun-windows-x64-modern",
		"clean:git:all": "bun run clean:git:untracked && bun run clean:git:gc && bun run clean:git:hooks",
		"clean:git:all:force": "bun run clean:git:untracked:force && bun run clean:git:gc && bun run clean:git:hooks",
		"clean:git:gc": "git gc --aggressive --prune",
		"clean:git:hooks": "rm -rf ./.git/hooks/ && bun install -f",
		"clean:git:untracked": "git clean -d -x -i",
		"clean:git:untracked:force": "git clean -d -x -f",
		"dev": "bun run start:dev",
		"fix": "bun run fix:biome; bun run fix:package",
		"fix:biome": "bun biome check --write",
		"fix:package": "bun sort-package-json --quiet",
		"lint": "bun run lint:biome && bun run lint:tsc",
		"lint:biome": "bun biome lint",
		"lint:tsc": "bun tsc --noEmit",
		"script:compress": "bun run ./scripts/compress.ts",
		"script:server": "bun run ./scripts/server.ts",
		"script:standalone": "bun run ./scripts/standalone.ts",
		"start": "bun run start:server",
		"start:dev": "bun vite",
		"start:rebuild": "bun run build:server && bun run start:server",
		"start:server": "NODE_ENV=production bun run --cwd=./dist/ ./server/index.js"
	},
	"browserslist": [
		"defaults"
	],
	"dependencies": {
		"@codemirror/autocomplete": "~6.18.4",
		"@codemirror/commands": "~6.7.1",
		"@codemirror/lang-cpp": "~6.0.2",
		"@codemirror/lang-css": "~6.3.1",
		"@codemirror/lang-go": "~6.0.1",
		"@codemirror/lang-html": "~6.4.9",
		"@codemirror/lang-java": "~6.0.1",
		"@codemirror/lang-javascript": "~6.2.2",
		"@codemirror/lang-json": "~6.0.1",
		"@codemirror/lang-markdown": "~6.3.1",
		"@codemirror/lang-php": "~6.0.1",
		"@codemirror/lang-python": "~6.1.6",
		"@codemirror/lang-rust": "~6.0.1",
		"@codemirror/lang-xml": "~6.1.0",
		"@codemirror/lang-yaml": "~6.1.2",
		"@codemirror/language": "~6.10.8",
		"@codemirror/state": "~6.5.0",
		"@codemirror/view": "~6.36.1",
		"@solid-primitives/media": "~2.2.9",
		"@solid-primitives/scheduled": "~1.4.4",
		"@solid-primitives/storage": "~4.2.1",
		"@tabler/icons-solidjs": "~3.26.0",
		"@tailwindcss/postcss": "4.0.0-beta.8",
		"@uiw/codemirror-extensions-hyper-link": "~4.23.7",
		"@uiw/codemirror-themes": "~4.23.7",
		"daisyui": "5.0.0-beta.1",
		"env-var": "~7.5.0",
		"hono": "~4.6.14",
		"solid-js": "~1.9.3",
		"tailwindcss": "4.0.0-beta.8",
		"vike": "~0.4.210",
		"vike-solid": "~0.7.8",
		"vite": "~6.0.6"
	},
	"devDependencies": {
		"@biomejs/biome": "~1.9.4",
		"@types/bun": "^1.1.14",
		"autoprefixer": "~10.4.20",
		"browserslist": "^4.24.3",
		"lefthook": "~1.10.1",
		"lightningcss": "~1.28.2",
		"postcss": "~8.4.49",
		"rollup-plugin-visualizer": "~5.13.0",
		"sort-package-json": "~2.12.0"
	},
	"peerDependencies": {
		"typescript": "~5.5.4"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"lefthook"
	]
}
